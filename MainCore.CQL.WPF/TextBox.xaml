<UserControl x:Class="MainCore.CQL.WPF.TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MainCore.CQL.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Grid>
        <avalon:TextEditor 
            ScrollViewer.VerticalScrollBarVisibility="Hidden" 
            ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
            Name="textEditor" 
            FontFamily="Consolas" 
            SyntaxHighlighting="CQL" 
            FontSize="10pt"
            Padding="3"
            PreviewKeyDown="textEditor_PreviewKeyDown"
            TextChanged="textEditor_TextChanged"
            LostFocus="textEditor_LostFocus"
            Text="1=1"/>
        <Popup Placement="Bottom" PlacementTarget="{Binding ElementName=textEditor}" Name="popupSuggestions" VerticalOffset="-5">
            <Border BorderBrush="Black" BorderThickness="1" Background="White">
                <ListBox Name="listBoxSuggestions" Margin="2">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock>
                                    <Grid Width="16" Height="16">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SuggestionType}" Value="Token">
                                                        <Setter Property="Background" Value="Black"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SuggestionType}" Value="Function">
                                                        <Setter Property="Background" Value="Fuchsia"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SuggestionType}" Value="Variable">
                                                        <Setter Property="Background" Value="Green"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding SuggestionType}" Value="Type">
                                                        <Setter Property="Background" Value="Orange"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                     </Grid>
                                    <TextBlock Text="{Binding Text}"/>
                                    <TextBlock Text="{Binding Usage}" Foreground="Silver" FontStyle="Italic"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Popup>
    </Grid>
</UserControl>
